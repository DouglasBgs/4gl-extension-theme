{
  "compilerOptions": {
    "outDir": "dist/js",
    "target": "ES2015",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["app/**/*"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ]
}
