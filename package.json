{
  "name": "4gltools",
  "displayName": "4gl",
  "description": "4gl auxiling themes, syntaxes and tools",
  "version": "2.0.0",
  "private": true,
  "publisher": "DouglasVscode",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/DouglasBgs/4gl-extension-theme"
  },
  "engines": {
    "vscode": "^1.47.0"
  },
  "activationEvents": [
    "onCommand:extension.open.appserver",
    "onCommand:extension.open.tss",
    "onCommand:extension.open.arquivo_log",
    "onCommand:extension.create.issue",
    "onCommand:extension.download.rpo",
    "onCommand:extension.open.Webview"
  ],
  "main": "./dist/js/app.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/progress-stream": "^2.0.2",
    "@types/vscode": "^1.53.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "lite-server": "^2.6.1",
    "mocha": "^8.4.0",
    "prettier": "2.7.1",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "categories": [
    "Themes",
    "Language Packs",
    "Snippets"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "menuTotvs",
          "title": "Menu Totvs",
          "icon": "media/dep.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "logix",
        "contents": "\n[$(file-directory-create) Criar Nova Issue](command:extension.create.issue \"configurar texto\")"
      },
      {
        "view": "logix",
        "contents": "\n[ $(debug-console) Abrir Arquivo de Log](command:extension.open.arquivo_log \"configurar texto\")"
      },
      {
        "view": "logix",
        "contents": "\n[$(cloud-download) Atualiza RPO](command:extension.download.rpo \"configurar texto\")"
      },
      {
        "view": "logix",
        "contents": "\n[$(server) Abrir Appserver](command:extension.open.appserver \"configurar texto\")"
      },
      {
        "view": "logix",
        "contents": "\n[$(debug-disconnect) Abrir Tss](command:extension.open.tss \"configurar texto\")"
      },
      {
        "view": "config",
        "contents": "\n[$(root-folder-opened) Configurar diretórios](command:extension.open.Webview \"configurar texto\")"
      }
    ],
    "views": {
      "menuTotvs": [
        {
          "name": "Logix",
          "id": "logix",
          "contextualTitle": "Menu Totvs"
        },
        {
          "name": "Datasul",
          "id": "datasul"
        },
        {
          "name": "Configurações",
          "id": "config",
          "initialSize": 1
        }
      ]
    },
    "themes": [
      {
        "label": "4gl theme color",
        "uiTheme": "vs-dark",
        "path": "./themes/4gl-color-theme.json"
      }
    ],
    "languages": [
      {
        "id": "4gl",
        "aliases": [
          "4GL"
        ],
        "extensions": [
          ".4gl",
          ".per"
        ],
        "configuration": "./config/4gl-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "4gl",
        "scopeName": "source.4gl",
        "path": "./syntaxes/4gl_language.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "4gl",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.1.0",
    "env": "0.0.2",
    "fs-extra": "^10.1.0",
    "fsprogress": "^1.0.0",
    "node-fetch": "^2.6.7",
    "progress-stream": "^2.0.0",
    "shelljs": "^0.8.4",
    "validator": "^13.6.0"
  }
}