{
    "name": "4gl",
    "displayName": "4gl",
    "description": "4gl code themes and syntaxes",
    "version": "0.0.1",
    "publisher": "DouglasVscode",
    "repository": {
        "url": "https://github.com/DouglasBgs/4gl-extension-theme"
    },
    "activationEvents": [
        "onView:menuLogix",
        "onCommand:extension.create.issue"
    ],
    "main": "./src/extension.js",
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.58.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    },
    "engines": {
        "vscode": "^1.53.0"
    },
    "categories": [
        "Themes"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "menuLogix",
                    "title": "Menu Logix",
                    "icon": "media/accusoft-brands.svg"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "facilidadesLogix",
                "contents": "\n[Criar Nova Issue](command:extension.create.issue \"Opens the GitLens Welcome (Quick Setup)\")"
                
            },
            {
				"view": "facilidadesLogix",
                "contents": "\n[Criar Issue de TU](command:extension.create.issue \"Opens the GitLens Welcome (Quick Setup)\")"
			}
        ],
        "views": {
            "menuLogix": [
                {
                    "id": "facilidadesLogix",
                    "name": "Facilidades Logix",
                    "icon": "media/dep.svg",
                    "contextualTitle": "Menu Logix"
                }
            ],
            "explorer": [
                {
                    "id": "jsonOutline",
                    "name": "Json Outline",
                    "when": "jsonOutlineEnabled"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.create.issue",
                "title": "Hello World Douglas",
                "icon": "media/refresh.svg"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "extension.create.issue",
                    "when": "view == facilidadesLogix",
                    "group": "navigation"
                }
            ]
        },
        "themes": [
            {
                "label": "4gl theme color",
                "uiTheme": "vs-dark",
                "path": "./themes/4gl-color-theme.json"
            }
        ],
        "languages": [
            {
                "id": "4gl",
                "aliases": [
                    "4GL"
                ],
                "extensions": [
                    ".4gl",
                    ".per"
                ],
                "configuration": "./config/4gl-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "4gl",
                "scopeName": "source.4gl",
                "path": "./syntaxes/4gl_language.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "4gl",
                "path": "./snippets/snippets.json"
            }
        ]
    },
    "dependencies": {
        "env": "0.0.2"
    }
}
